
<br>
<div class="grid-x">
  <div class="cell large-2"></div>
  <div class="cell large-8 text">

    <%= form_with(model: agency) do |form| %>
      <%= render "clientes/shared/error_messages", resource: agency%>

      <%= form.label :nombre_agencia, "Nombre de la Agencia:" %>
      <%= form.text_field :nombre_agencia, class: "size-letter" %>
      <%= form.label :url, "Link/Url de la Agencia:" %>
      <%= form.text_field :url, class: "size-letter"  %>
      <%= form.label :descripcion, "DescriciÃ³n de la Agencia:" %>
      <%= form.text_area :descripcion, class: "size-letter",size: "70x3" %>
      <%= form.label :alcance, "Alcance de la Agencia:" %>
      <%= form.select :alcance, ["Local", "Nacional", "Internacional"],  {}  ,{:class => "size-letter"} %>
      <%= form.label :tipo, "Tipo de la Agencia:" %>
      <%= form.select :tipo, ["Tour Operadoras", "Mayoristas", "Minoristas", "Mixta"], {} ,{:class => "size-letter"} %>

      <% if agency.id != nil %>
      <p class="text size">Agregar Categorias:</p>
      <hr>
      <div class="grid-x size">
      <div class="cell large-5">
          <p class="text size">Categorias asociadas:</p>
          <hr>
          <% if agency.area_intereses.any? %>
            <%= render 'calendario_anuales/calendariodetalle'%>
          <% end %>
          <% if agency.area_intereses.empty? %>
            <p class="text title-form size">*No hay categorias asociadas a esta agencia*</p>
          <% end %>
      </div>
      <div class="cell large-2"></div>
      <div class="cell large-5 text">
      <p class="text size">Agregar Categorias:</p>
      <hr>
      <br>
        <%= link_to  new_agency_area_interes_path(@agency, @area_interes), :method => :get do%>
            <button class="button-hover-like button rounded text socios-button expanded"><span>Agregar Fecha de Salida</span><i class="fa fa-heart"></i></button>
         <% end %>
      </div>
    </div>
    <% end %>
      <br>
      <br>
      <br>
      <div class="grid-x">
        <div class="cell large-3"></div>
        <div class="cell large-6"><%= form.submit class: "button text size expanded rounded"%></div>
        <div class="cell large-3"></div>
      </div>
  <% end %>
  
  </div>
  <div class="cell large-2"></div>
</div>


