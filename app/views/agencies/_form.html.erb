

<br>
<div class="grid-x">
  <div class="cell large-2"></div>
  <div class="cell large-8 text">

    <%= form_with(model: agency) do |form| %>
      <% if @agency.errors.any? %>
            <% @agency.errors.each do |error| %>
              <ul><p class="error-message">*<%= error.full_message%></p></ul>
            <% end %>
      <% end %>

      <%= form.label :nombre_agencia, "Nombre de la Agencia:" %>
      <%= form.text_field :nombre_agencia, class: "size-letter" %>
      <%= form.label :url, "Link/Url de la Agencia:" %>
      <%= form.text_field :url, class: "size-letter"  %>
      <%= form.label :descripcion, "DescriciÃ³n de la Agencia:" %>
      <%= form.text_area :descripcion, class: "size-letter",size: "70x3" %>
      <%= form.label :alcance, "Alcance de la Agencia:" %>
      <%= form.select :alcance, ["Local", "Nacional", "Internacional"],  {}  ,{:class => "size-letter"} %>
      <%= form.label :tipo, "Tipo de la Agencia:" %>
      <%= form.select :tipo, ["Tour Operadoras", "Mayoristas", "Minoristas", "Mixta"], {} ,{:class => "size-letter"} %>
      <%= form.label :picture, "Imagen Referencial:" %>
      <%= form.file_field :picture %>
      <br>
      <br>
      <div class="grid-x">
        <div class="cell large-3"></div>
        <div class="cell large-6"><%= form.submit class: "button text size expanded rounded"%></div>
        <div class="cell large-3"></div>
      </div>
  <% end %>
  
  </div>
  <div class="cell large-2"></div>
</div>


